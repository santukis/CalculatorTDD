<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/button_side</item>
        <item name="android:layout_height">@dimen/button_side</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="Button.Operator">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
